<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:SoundFlux.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:SoundFlux.Views"
        mc:Ignorable="d"
		d:DesignWidth="400" d:DesignHeight="600"
        Width="400" Height="600"
		WindowStartupLocation="CenterScreen"
		x:Class="SoundFlux.Views.MainWindow"
        Icon="/Assets/Icons/icon.ico"
        Title="SoundFlux"
		WindowState="{Binding MainWindowState, Mode=OneWayToSource}"
		ShowInTaskbar="{Binding !IsMinimizedToTray}"/>
